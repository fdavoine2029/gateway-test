                    {% else %}   
                    <div  hidden>{{ form_row(field) }}</div>
  
                    {% endif %}
                    
                    {% set col = col + 1 %}
                {% endfor %}

                
            </div>
            {% set row = row + 1 %}
            {% endfor %}
        <div class="row">
            {% if nbColumn < 100 %}
                <div class="col-1"><button type="submit" class="btn btn-success mt-2" id="conf_submit" name="conf_submit" value="add">Ajouter</button></div>
            {% endif %}
       </div>
       <div class="row">
        <div class="col-4"></div>
        <div class="col-2"><button type="submit" class="btn btn-success mt-2" id="conf_submit" name="conf_submit" value="none">Sauvegarder la structure</button></div>
        <div class="col-4"></div>
            
       </div>
       
       {{ form_end(form) }}
       
        
        
    </fieldset>
    <fieldset class="border p-2">
