{% extends 'base.html.twig' %}

{% block title %}Scalabel - Commandes{% endblock %}

{% block body %}

 {% block stylesheets %}
    <link href="https://cdn.datatables.net/v/dt/dt-1.13.4/datatables.min.css" rel="stylesheet"/>
 {% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="{{ asset('assets/js/sklbl_menu.js')}}"></script>
    <script src="{{ asset('assets/js/sklbl_step_conf.js')}}"></script>
{% endblock %}

<main class="container-fluid">
    <section class="row">
    <h3> Scalabel - Commandes {{sklblOrder.orderNum}} du client {{client.name}}</h3>
    {% include '_partials/_sklbl/_menu.html.twig' %}

    <!-- Modal -->
    <div class="modal fade" id="modal_add_model" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Ajouter un modèle</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div class="row pt-2">
                <div class="col-12">
                    <div class="form-group row">
                        <label for="nom_model" class="col-sm-2 col-form-label">Nom:</label>
                        <div class="col-sm-10">
                            <input class="form-control" id="nom_model" type="text">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" onclick="step_conf_addModel({{ sklblOrder.id }})" data-bs-dismiss="modal">Ajouter</button>
        </div>
        </div>
    </div>
    </div>

    <div class="container">
    <fieldset class="border p-2">
        <legend  class="float-none w-auto p-2">Modèles</legend>
        {{ form_start(formModel) }}
        <div class="row">
            <div class="col-4">
                {{ form_label(formModel.SklblModel) }}
                {{ form_errors(formModel.SklblModel) }}
                {{ form_widget(formModel.SklblModel) }}
            </div>
            <div class="col-1 pt-3">
                
            </div>
            <div class="col-1 pt-3">
                
            </div>
            <div class="col-6"></div>
        </div>
        <div class="row">
            <div class="col-1">
                <button type="button"  class="btn btn-primary mt-2"  data-bs-toggle="modal" id="myInput" data-bs-target="#modal_add_model">Ajouter</button>
            </div>
            <div class="col-1">
                <button type="button" class="btn btn-success mt-2" id="load_model" name="load_model" value="none"   onclick="step_conf_loadModel({{ sklblOrder.id }})">Charger</button>
            </div>
            <div class="col-1">
                <button type="button" class="btn btn-warning mt-2" id="save_model" name="save_model" value="none"   onclick="step_conf_saveModel({{ sklblOrder.id }})">Sauvegarder</button>
            </div>
            <div class="col-1">
                <button type="button" class="btn btn-danger mt-2" id="delete_model" name="delete_model" value="none"  onclick="step_conf_deleteModel({{ sklblOrder.id }})">Supprimer</button>
            </div>
            <div class="col-8"></div>
        </div>
        {{ form_end(formModel) }}
    </fieldset>

    <fieldset class="border p-2">
        <legend  class="float-none w-auto p-2">Structure des données</legend>
       {{ form_start(form) }}
